#
# ~/.config/aliasrc
#

# shortcuts
alias cu='cd ..'

# Color commands
alias ls='ls --color=auto'

# Pipe to clipboard
alias c="xclip -i -se c" 

# Basic shortcuts
alias tp="trash-put"
alias r="ranger"

# Easy downloading
## using OLDPWD because cd - writes to stdout and OLDPWD will send to ~ if unset
dl() { if [ -n "$2" ]; then cd "$2"; fi; curl -LOJ $1; if [ -n "$2" ]; then cd $OLDPWD; fi; }

# Package management
alias whatprovides="yay -Fs"
