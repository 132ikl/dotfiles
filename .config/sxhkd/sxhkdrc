alt + period
    bwmenu --auto-lock 3600
# open shortcuts
alt + Return
    ~/.programs/st/st
alt + o ; {q, y, m, n, s} 
    {qutebrowser, freetube-bin, "$TERMINAL" neomutt, "$TERMINAL" ncmpcpp, steam-runtime}
alt + shift + {o, p}
    maim -su -d {2, 0} | upload
super + shift + p
    maim -su | xclip -i -se c -t image/png
super + shift + control + c
    xclip -o -se c -t image/png | upload
alt + shift + semicolon
    notify-send "Stopwatch" "$(~/.scripts/stopwatch)"
alt + u
    pactl set-sink-volume @DEFAULT_SINK@ -2%
alt + i
    pactl set-sink-volume @DEFAULT_SINK@ +2%
alt + shift + u
    pactl set-sink-volume @DEFAULT_SINK@ -5%
alt + shift + i
    pactl set-sink-volume @DEFAULT_SINK@ +5%
alt + shift + s
    ~/.scripts/screencast
