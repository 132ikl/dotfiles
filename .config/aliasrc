#
# ~/.config/aliasrc
#

# shortcuts
alias cu='cd ..'

# Color commands
alias ls='ls --color=auto'

# trash-cli

# Pipe to clipboard
alias c="xclip -i -se c" 

# Basic shortcuts
alias x="dtrx"
alias tp="trash-put"
alias r="ranger"

# easy downloading
alias wget="curl -O"

# package management
alias whatprovides="yay -Fs"
